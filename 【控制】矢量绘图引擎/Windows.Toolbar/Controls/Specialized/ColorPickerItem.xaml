<UserControl x:Class="Windows.Toolbar.Controls.Specialized.ColorPickerItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="11" Height="11">

    <UserControl.Resources>
        <Style x:Key="Normal" TargetType="Border">
            <Setter Property="BorderBrush" Value="#C5C5C5"/>
        </Style>

        <Style x:Key="Selected" TargetType="Border">
            <Setter Property="BorderBrush" Value="#F29436"/>
        </Style>
    </UserControl.Resources>

    <Border x:Name="RootElement" BorderThickness="1" Style="{StaticResource Normal}">
        <Grid Background="Transparent" />
    </Border>
</UserControl>
