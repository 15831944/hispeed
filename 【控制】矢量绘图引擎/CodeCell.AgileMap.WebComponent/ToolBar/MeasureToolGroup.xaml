<UserControl x:Class="CodeCell.AgileMap.WebComponent.MeasureToolGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:toolbar="clr-namespace:Windows.Toolbar.Controls;assembly=Windows.Toolbar"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <toolbar:ToolbarGroup Footer="量测工具">
        <StackPanel Orientation="Horizontal">
            <toolbar:ToolbarButton x:Name="btnMeasureByPolyline">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="2" Source="{Binding Path=Image}"/>
                    <TextBlock Text="{Binding Path=Name}"/>
                </StackPanel>
            </toolbar:ToolbarButton>
            <toolbar:ToolbarButton x:Name="btnMeasureByPolygon" >
                <StackPanel Orientation="Horizontal">
                    <Image Margin="2" Source="{Binding Path=Image}"/>
                    <TextBlock Text="{Binding Path=Name}"/>
                </StackPanel>
            </toolbar:ToolbarButton>
        </StackPanel>
    </toolbar:ToolbarGroup>
</UserControl>
